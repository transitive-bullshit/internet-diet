{
  "name": "Internet Diet",
  "version": "0.0.0",
  "manifest_version": 3,
  "description": "Remove unhealthy food options from the web.",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.postmates.com/*"],
      "js": ["./content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
